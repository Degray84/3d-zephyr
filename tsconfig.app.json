{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.json"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2020"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "@intlify/vite-plugin-vue-i18n/client"
    ]
  }
}